{
    "compilerOptions": {
        "target": "es2021",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ],
    "baseUrl": "./",
    "paths": {
        "@config/*": ["src/config/*"],
        "@modules/*": ["src/modules/*"],
        "@shared/*": ["src/shared/*"],
    }
}
